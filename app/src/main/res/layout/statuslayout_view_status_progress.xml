<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progress_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress_wheel"
        style="?attr/progressBarStyle"
        android:layout_width="@dimen/statuslayout_status_ic_size"
        android:layout_height="@dimen/statuslayout_status_ic_size"
        android:layout_marginTop="@dimen/statuslayout_status_ic_margintop"
        android:padding="5dp" />

    <TextView
        android:id="@+id/progressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="@string/statuslayout_status_loading"
        android:textColor="#33475f"
        android:textSize="12sp" />
</LinearLayout>