<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_1"
        app:cardElevation="@dimen/dp_2"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        style="@style/largeText"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_13"
                        tools:text="Title" />

                    <TextView
                        android:id="@+id/tv_desc"
                        style="@style/smallText"
                        android:layout_marginTop="@dimen/dp_5"
                        android:maxLines="2"
                        tools:text="detils" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_envelope"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:scaleType="fitCenter"
                    android:src="@drawable/common_show_default_photo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_chapte"
                    style="@style/smallText"
                    android:background="@drawable/home_item_bg_cls_lable"
                    android:padding="@dimen/dp_3"
                    android:textColor="@color/color_5F8AFA"
                    android:textSize="@dimen/sp_8"
                    tools:text="完整项目" />

                <TextView
                    android:id="@+id/tv_author"
                    style="@style/smallText"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/color_5F8AFA"
                    android:textSize="@dimen/sp_10"
                    tools:text="vitar5" />

                <TextView
                    android:id="@+id/tv_date"
                    style="@style/smallText"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textSize="@dimen/sp_8"
                    tools:text="12分钟前" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:src="@drawable/common_ic_like_nor" />

                <TextView
                    style="@style/smallText"
                    android:paddingLeft="@dimen/dp_3"
                    android:text="收藏" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>