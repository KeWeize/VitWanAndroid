<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/error_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/errorImageView"
        android:layout_width="@dimen/statuslayout_status_ic_size"
        android:layout_height="@dimen/statuslayout_status_ic_size"
        android:layout_marginTop="@dimen/statuslayout_status_ic_margintop"
        android:src="@drawable/statuslayout_ic_status_error" />

    <TextView
        android:id="@+id/errorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/statuslayout_status_error"
        android:textColor="#8a8a8a"
        android:textSize="16sp" />

</LinearLayout>