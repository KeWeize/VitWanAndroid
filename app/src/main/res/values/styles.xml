<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="BaseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="largeText" parent="BaseText">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="midText" parent="BaseText">
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <style name="smallText" parent="BaseText">
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

</resources>
